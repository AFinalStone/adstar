<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/lrv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nt_title"></com.github.jdsjlzx.recyclerview.LRecyclerView>
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/color_921224"
        android:id="@+id/rl_time"
        android:visibility="gone"
        >
       <ImageView
           android:layout_width="24dp"
           android:layout_height="24dp"
           android:src="@drawable/news_day"
           android:layout_marginLeft="12dp"
           android:id="@+id/imageView2"
           android:layout_marginStart="18dp"
           android:layout_centerVertical="true"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_marginLeft="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginStart="9dp"
            android:id="@+id/linearLayout4">
            <TextView
                android:id="@+id/tv_am_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontSize_14sp"
                android:textColor="@color/color_ffffff"
                android:text="PM"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/tv_time_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontSize_10sp"
                android:textColor="@color/color_ffffff"
                android:text="14:00"
                android:layout_centerInParent="true"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontSize_16sp"
            android:textColor="@color/color_fafafa"
            android:text="2017/5/15"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>
</FrameLayout>