<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b9000000"
    >
    <ImageView
        android:id="@+id/navigation_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/navigation_1"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/navigation_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/navigation_3"
        android:layout_gravity="right|top"
        android:visibility="gone"
        />
    <ImageView
        android:layout_marginTop="48dp"
        android:id="@+id/navigation_2_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/navigation_2_2"
        android:layout_gravity="top"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigation_4"
        android:visibility="gone"
        >
        <ImageView
            android:layout_marginTop="48dp"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/navigation_4_1"
            android:id="@+id/imageView5" />
        <ImageView
            android:id="@+id/navigation_4_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/navigation_4_2"
            android:layout_below="@+id/imageView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp" />
        <ImageView
            android:src="@drawable/navigation_4_3"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</FrameLayout>