<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="82dp"
    android:background="@color/color_ffffff"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    >
    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/fontSize_11sp"
        android:textColor="@color/color_a1a1a1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time"
        android:text="@string/time_to_default"
        />
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_code"
            android:textSize="@dimen/fontSize_14sp"
            android:textColor="@color/color_434343"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/tv_check"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onclick_check"
            android:textSize="@dimen/fontSize_14sp"
            android:paddingRight="20dp"
            android:textColor="@color/color_FB9938"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:textSize="@dimen/fontSize_14sp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>