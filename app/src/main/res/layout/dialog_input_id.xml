<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_referee"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_dialog_referee">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/add_star"
                android:textColor="@color/font_333333"
                android:textSize="@dimen/text_size_18" />

            <ImageView
                android:id="@+id/iv_dialog_close"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="right"
                android:src="@drawable/close" />
        </RelativeLayout>

        <EditText
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
            android:id="@+id/member_id"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/day_one_text_color"
            android:textColorHint="@color/font_999999"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="@dimen/fontSize_14sp"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/bg_edittext"
            android:hint="@string/input_member_id" />

        <EditText
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/area_broker_id"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/bg_edittext"
            android:textSize="@dimen/fontSize_14sp"
            android:textColor="@color/day_one_text_color"
            android:textColorHint="@color/font_999999"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:hint="@string/input_area_broker_id"
            android:gravity="center"
            />

        <EditText
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
            android:id="@+id/broker_id"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/bg_edittext"
            android:textSize="@dimen/fontSize_14sp"
            android:textColor="@color/day_one_text_color"
            android:textColorHint="@color/font_999999"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:hint="@string/input_broker_id" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_25"
            android:lineSpacingExtra="5dp"
            android:text="@string/input_id_tips"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_14" />

        <Button
            android:id="@+id/btn_enter_star"
            style="@style/ButtonLogin"
            android:layout_marginTop="@dimen/dp_40"
            android:text="@string/enter_star" />

    </LinearLayout>
</LinearLayout>