<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.yundian.star.widget.NormalTitleBar
        android:id="@+id/nt_title"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_height="48dp"></com.yundian.star.widget.NormalTitleBar>
    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/lrv"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.github.jdsjlzx.recyclerview.LRecyclerView>
    <com.yundian.star.widget.PasswordView
        android:id="@+id/passwordView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>