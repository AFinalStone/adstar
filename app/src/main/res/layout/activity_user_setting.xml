<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fafafa"
    android:orientation="vertical"
    android:id="@+id/ll_set_user_info">

    <com.yundian.star.widget.NormalTitleBar
        android:id="@+id/nt_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <!--<ScrollView-->

    <!--android:id="@+id/contentView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@color/default_bg">-->

    <LinearLayout
        android:id="@+id/ll_user_head_icon"
        style="@style/user_info_setting_style"
        android:layout_marginTop="@dimen/dp_25">

        <TextView
            style="@style/user_setting_text_style"
            android:text="@string/user_head_imageview" />
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/iv_imageview"/>

        <com.yundian.star.ui.view.RoundImageView
            android:id="@+id/headImage"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_8"
            android:scaleType="centerCrop"
            android:src="@drawable/welcome_bg"
            app:roundHeight="25dp"
            app:roundWidth="25dp" />

        <include layout="@layout/ll_right_arrow" />

    </LinearLayout>

    <include layout="@layout/ll_interval_line" />


    <LinearLayout
        android:id="@+id/ll_user_phone"
        style="@style/user_info_setting_style">

        <TextView
            style="@style/user_setting_text_style"
            android:text="@string/user_phone" />

        <TextView
            android:id="@+id/tv_user_phone"
            style="@style/user_setting_hint_style"
            android:text="00000000" />

    </LinearLayout>

    <include layout="@layout/ll_interval_line" />

    <LinearLayout
        android:id="@+id/ll_user_pet_name"
        style="@style/user_info_setting_style">

        <TextView
            style="@style/user_setting_text_style"
            android:text="@string/user_pet_name" />

        <TextView
            android:id="@+id/tv_user_pet_name"
            style="@style/user_setting_hint_style"
            android:text="武松" />

    </LinearLayout>

    <include layout="@layout/ll_interval_line" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_26"
        android:layout_marginLeft="@dimen/dp_24" />

    <LinearLayout
        android:id="@+id/ll_user_name"
        style="@style/user_info_setting_style">

        <TextView
            style="@style/user_setting_text_style"
            android:text="@string/user_real_name" />

        <TextView
            android:id="@+id/tv_user_real_name"
            style="@style/user_setting_hint_style"
            android:text="武二郎" />
    </LinearLayout>

    <include layout="@layout/ll_interval_line" />

    <LinearLayout
        android:id="@+id/ll_user_card_number"
        style="@style/user_info_setting_style">

        <TextView
            style="@style/user_setting_text_style"
            android:text="@string/user_card_number" />

        <TextView
            android:id="@+id/tv_user_card_number"
            style="@style/user_setting_hint_style"
            android:text="341221465456454545" />


    </LinearLayout>

    <include layout="@layout/ll_interval_line" />

    <!--</ScrollView>-->

</LinearLayout>