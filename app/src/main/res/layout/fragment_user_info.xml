<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_user_info_bg"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_bg_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_user_info_bg"
                    android:background="@color/color_fafafa"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/text_size_18" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_total_assets"
                            android:textColor="@color/color_grey_999999"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/tv_user_total_assets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:textColor="@color/color_black_333333"
                            android:textSize="@dimen/text_size_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_40"
                            android:text="@string/user_buyed_star"
                            android:textColor="@color/color_grey_999999"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/tv_order_star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:textColor="@color/color_black_333333"
                            android:textSize="@dimen/text_size_16" />
                    </LinearLayout>

                </LinearLayout>

                <com.yundian.star.ui.view.RoundImageView
                    android:id="@+id/headImage"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_default_head"
                    app:roundHeight="38dp"
                    app:roundWidth="38dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_user_money_bag"
                style="@style/user_info_setting_style">

                <TextView
                    style="@style/user_setting_text_style"
                    android:text="@string/my_moneybag" />

                <include layout="@layout/ll_right_arrow" />
            </LinearLayout>

            <include layout="@layout/ll_interval_line" />

            <LinearLayout
                android:id="@+id/ll_user_order_star"
                style="@style/user_info_setting_style">

                <TextView
                    style="@style/user_setting_text_style"
                    android:text="@string/my_order_star" />

                <include layout="@layout/ll_right_arrow" />
            </LinearLayout>

            <include layout="@layout/ll_interval_line" />


            <LinearLayout
                android:id="@+id/ll_customer_service"
                style="@style/user_info_setting_style">

                <TextView
                    style="@style/user_setting_text_style"
                    android:text="@string/customer_service" />

                <include layout="@layout/ll_right_arrow" />

            </LinearLayout>

            <include layout="@layout/ll_interval_line" />

            <LinearLayout
                android:id="@+id/ll_common_problem"
                style="@style/user_info_setting_style"
                android:visibility="gone">

                <TextView
                    style="@style/user_setting_text_style"
                    android:text="@string/common_problem" />

                <include layout="@layout/ll_right_arrow" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_general_settings"
                style="@style/user_info_setting_style">

                <TextView
                    style="@style/user_setting_text_style"
                    android:text="@string/general_settings" />

                <include layout="@layout/ll_right_arrow" />

            </LinearLayout>

            <include layout="@layout/ll_interval_line" />

            <Button
                android:id="@+id/btn_my_referee"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@color/main_bg_color"
                android:padding="@dimen/dp_15"
                android:text="@string/my_referee"
                android:visibility="invisible"
                android:textColor="@color/color_434343"
                android:textSize="@dimen/text_size_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:text="@string/app_version_name" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>